# Production Environment Variables for Optimized Performance
# Copy this to .env and customize for your deployment

# ============================================
# Application Settings
# ============================================
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-here-change-this

# Admin Credentials
ADMIN_USER=admin
ADMIN_PASS=your-secure-password
ADMIN_TOKEN=your-api-token-here

# ============================================
# Database Settings
# ============================================
AUTO_VOTER_DB=sqlite:///./data/auto_voter.db
AUTO_VOTER_LOG_DIR=./data/logs

# ============================================
# Scheduler Settings
# ============================================
# Interval in seconds (60 = 1 minute, 300 = 5 minutes)
AUTO_VOTER_SCHEDULE_INTERVAL=60

# ============================================
# VPN Settings
# ============================================
EXPRESSVPN_ACTIVATION_CODE=your-activation-code

# ============================================
# Tor Settings
# ============================================
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_PASSWORD=welcomeTomyPa55word

# ============================================
# InfluxDB Settings (Optional)
# ============================================
INFLUX_URL=
INFLUX_TOKEN=
INFLUX_ORG=
INFLUX_BUCKET=

# ============================================
# Python Performance Optimizations
# ============================================
# Unbuffered output for better logging
PYTHONUNBUFFERED=1

# Don't write .pyc files (saves disk space)
PYTHONDONTWRITEBYTECODE=1

# Optimize Python bytecode (removes docstrings and assertions)
# 0 = no optimization, 1 = remove assertions, 2 = remove docstrings too
PYTHONOPTIMIZE=2

# Reduce memory fragmentation (bytes)
MALLOC_TRIM_THRESHOLD_=100000

# ============================================
# Gunicorn Settings (for web container)
# ============================================
GUNICORN_WORKERS=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5

# ============================================
# Resource Limits (for docker-compose)
# ============================================
# These are set in docker-compose.optimized.yml
# Web container: 512M memory, 1.0 CPU
# Scheduler container: 768M memory, 1.5 CPU
